        <record id="mail_template_contract_warranty_warn" model="mail.template">
            <field name="name">Contract-Warranty_Warn_template</field>
            <field name="model_id" ref="model_neweb_contract_contract"/>
            <field name="email_from">erp@newebinfo.com.tw</field>
            <field name="email_to">${object.get_emails(object.warranty_warn_users)}</field>
            <field name="subject">Warranty Warn</field>
            <field name="lang">zh_TW</field>
            <field name="auto_delete" eval="True"/>
            <field name="user_signature" eval="True"/>
            <field name="body_html"><![CDATA[
            	<p>
                    Dears,
            	    <p>
                        Contract ${object.name} warranty is expired on ${object.warranty_end_date}.
                    </p>
                    <p>
                        Please contact the customer ${object.customer_name.name} as soon as possible.
                    </p>
                </p>
            ]]>
            </field>
        </record>

