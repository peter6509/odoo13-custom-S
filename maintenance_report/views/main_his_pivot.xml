            <field name="name">main_his_pivot_tree</field>
            <field name="model">maintenance_his.pivot</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="department_name"/>
                    <field name="equipment_name"/>
                    <field name="equipment_desc"/>
                    <field name="request_date"/>
                    <field name="repaired_date"/>
                    <field name="broken_time"/>
                    <field name="faulttext"/>
                    <field name="maintenance_content"/>
                    <field name="parts_name"/>
