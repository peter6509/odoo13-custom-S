            <field name="name">ipla.iot.furance.form</field>
            <field name="model">alldo_ipla_iot.furance_report</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
